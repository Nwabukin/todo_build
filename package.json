		"watch": "tsc --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nwabukin/todo_build.git"
	},
	"homepage": "https://github.com/Nwabukin/todo_build#readme",
	"bugs": {
		"url": "https://github.com/Nwabukin/todo_build/issues"
	},
	"keywords": [
		"taskmanager",
		"mcp",
		"claude",
		"subtasks",
		"task-management",
		"validation",
		"typescript",
		"model-context-protocol"
	],
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "0.5.0",
		"chalk": "^5.3.0",
		"glob": "^10.3.10",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.23.5"
	},
	"devDependencies": {
		"@types/json-schema": "^7.0.15",
